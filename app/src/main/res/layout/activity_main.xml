<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:id="@+id/linierluar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linier1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

        <fragment
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragment1"
            android:name="com.example.pertemuan2_fragment.fragment1"/>

        <fragment
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/fragment2"
            android:name="com.example.pertemuan2_fragment.fragment2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linier2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/fragment3"
                android:name="com.example.pertemuan2_fragment.fragment3"/>

            <fragment
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/fragment4"
                android:name="com.example.pertemuan2_fragment.fragment4"/>
        </LinearLayout>
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
